<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33055556" />

    <ImageView
        android:id="@+id/bg_avg_ball_speed"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/FoosbalTheme.StatsBackground"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_avg_ball_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/text_avg_speed_unit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="55" />

    <TextView
        android:id="@+id/text_avg_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingTop="3dp"
        android:text="@string/units_speed"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/text_avg_ball_speed"
        app:layout_constraintTop_toTopOf="@+id/text_avg_ball_speed" />


    <TextView
        android:id="@+id/text_avg_ball_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_avg_ball_speed"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/text_avg_speed_unit"
        app:layout_constraintStart_toStartOf="@+id/text_avg_ball_speed"
        app:layout_constraintTop_toBottomOf="@+id/text_avg_ball_speed" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <ImageView
        android:id="@+id/bg_max_ball_speed"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/FoosbalTheme.StatsBackground"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_max_ball_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/text_max_speed_unit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="85" />

    <TextView
        android:id="@+id/text_max_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingTop="3dp"
        android:text="@string/units_speed"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/text_max_ball_speed"
        app:layout_constraintTop_toTopOf="@+id/text_max_ball_speed" />


    <TextView
        android:id="@+id/text_max_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_max_ball_speed"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/text_max_speed_unit"
        app:layout_constraintStart_toStartOf="@+id/text_max_ball_speed"
        app:layout_constraintTop_toBottomOf="@+id/text_max_ball_speed" />


    <ImageView
        android:id="@+id/bg_fastest_goal"
        style="@style/FoosbalTheme.StatsBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_fastest_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/bg_fastest_goal"
        tools:text="00:32" />

    <TextView
        android:id="@+id/text_fastest_goal_label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/label_fastest_goal"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/text_fastest_goal"
        app:layout_constraintStart_toStartOf="@+id/text_fastest_goal"
        app:layout_constraintTop_toBottomOf="@+id/text_fastest_goal" />


</android.support.constraint.ConstraintLayout>