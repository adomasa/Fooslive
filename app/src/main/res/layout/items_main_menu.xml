<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttons_main_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_game_modes"
        android:text="@string/menu_choose_mode"
        style="@style/FoosballTheme.MenuButton"/>

    <Button
        android:id="@+id/button_settings"
        android:text="@string/activity_settings"
        style="@style/FoosballTheme.MenuButton"/>

    <Button
        android:id="@+id/button_history"
        android:text="@string/activity_history"
        style="@style/FoosballTheme.MenuButton"/>

    <Button
        android:id="@+id/button_info"
        android:text="@string/activity_info"
        style="@style/FoosballTheme.MenuButton"/>

</LinearLayout>