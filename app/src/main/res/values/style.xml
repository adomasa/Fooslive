<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <style name="FoosballTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom</item>
    </style>

    <style name="FoosballTheme" parent="FoosballTheme.Base"/>


    <style name="FoosballTheme.Splash" parent ="FoosballTheme.Base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.Custom">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FoosballTheme.MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/buttons_distance</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_menu_button</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="FoosballTheme.BigLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_logo_200dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    
    <style name="FoosballTheme.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FoosballTheme.ScoreButton">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_game_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="FoosballTheme.ArrowImage">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">50dp</item>
        <item name="android:scaleX">3</item>
        <item name="android:scaleY">3</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="FoosballTheme.InGameTeamLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLength">17</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FoosballTheme.StatsBackground">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:src">@color/bg_status_end_game</item>
    </style>

    <style name="FoosballTheme.EndGameTeamName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">@integer/max_name_length</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>

    </style>
    <style name="FoosballTheme.EndGameTeamLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
    <style name="FoosballTheme.EndGameStatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FoosballTheme.EndGameComponentStatsLabel" parent="FoosballTheme.EndGameStatsLabel">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="FoosballTheme.EndGameComponentStatsUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FoosballTheme.EndGameComponentStatsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>